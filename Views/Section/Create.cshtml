@model AppMovie.Models.Section
@{
    ViewData["Title"] = "Secciones";
}
@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
<div>
<h4 class="sombraTexto sizeText">Seccion</h4>
<div class="row HomeV2">
    <hr />
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SectionName" class="control-label sombraTexto"></label>
                <input asp-for="SectionName" class="form-control" onkeyup="this.value = this.value.toUpperCase()" />
                <span asp-validation-for="SectionName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn botonCrearV2" />
                <a class="btn botonVolver" asp-action="Index">Volver a la lista</a>
            </div>
        </form>
    </div>
</body>
</html>
