@model AppMovie.Models.Country
@{
    ViewData["Title"] = "Paises";
}
@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Crear</title>
</head>
<body>
<div class="HomeV2">
    <h4 class="sombraTexto sizeText">Pa√≠s</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CountryName" class="control-label sombraTexto"></label>
                    <input asp-for="CountryName" class="form-control" onkeyup="this.value = this.value.toUpperCase()"/>
                    <span asp-validation-for="CountryName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Crear" class="btn botonCrearV2" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a class="btn botonVolver" asp-action="Index">Volver a la lista</a>
    </div>
</div>
</body>
</html>
