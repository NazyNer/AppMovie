@model IEnumerable<AppMovie.Models.Country>
@{
    ViewData["Title"] = "Paises";
}
@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a class="botonCrear" asp-action="Create">Crear nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CountryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CountryName)
            </td>
            <td>
                <a class="botonEditar" asp-action="Edit" asp-route-id="@item.CountryId">Editar</a> |
                <a class="btn botonEliminar" onclick = "eliminarPais(@item.CountryId);">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
