@model AppMovie.Models.Movie
@{
    ViewData["Title"] = "Pelis";
}
@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
<div class="HomeV2">
    <h4 class="sombraTexto sizeText">Movie</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="MovieName" class="control-label sombraTexto"></label>
                    <input asp-for="MovieName" class="form-control" onkeyup="this.value = this.value.toUpperCase()"/>
                    <span asp-validation-for="MovieName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MovieDescription" class="control-label sombraTexto"></label>
                    <input asp-for="MovieDescription" class="form-control" />
                    <span asp-validation-for="MovieDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MovieDate" class="control-label sombraTexto"></label>
                    <input asp-for="MovieDate" class="form-control" />
                    <span asp-validation-for="MovieDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SectionID" class="control-label sombraTexto"></label>
                    <select asp-for="SectionID" class ="form-control" asp-items="ViewBag.SectionID"></select>
                </div>
                <div class="form-group">
                    <label asp-for="GenderID" class="control-label sombraTexto"></label>
                    <select asp-for="GenderID" class ="form-control" asp-items="ViewBag.GenderID"></select>
                </div>
                <div class="form-group">
                    <label asp-for="ProducerID" class="control-label sombraTexto"></label>
                    <select asp-for="ProducerID" class ="form-control" asp-items="ViewBag.ProducerID"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Crear" class="btn botonCrearV2" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a class="btn botonVolver" asp-action="Index">Volver a la lista</a>
    </div>
</div>
</body>
</html>
